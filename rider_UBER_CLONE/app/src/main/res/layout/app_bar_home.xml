<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar">



    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_home" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        app:cardCornerRadius="15dp"
        android:elevation="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_pickup_place"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/location__start2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_final_pickup_location"
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="Pickup location"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingActionButton7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.5"
                    android:focusable="true"
                    app:backgroundTint="@color/colorPrimary"
                    app:fabCustomSize="30dp"
                    app:rippleColor="@android:color/holo_red_dark"
                    app:srcCompat="@drawable/currentloc2" />


            </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_pickup_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:padding="16dp">
            <EditText
                android:id="@+id/et_pickup"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Pickup location"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pickup_places"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_destination_place"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/location__start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_final_destination"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="Search destination"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_destination_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical"
                android:padding="16dp">
                <EditText
                    android:id="@+id/et_destination"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="@string/where_to_go"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_destination_places"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>